programa {
  funcao inicio() {
    
    //Declaração de váriaveis
    real n1, n2, soma

    //Entrada
    escreva("Digite o primeiro número: ")
    leia(n1)
    escreva("Digite o segundo número: ")
    leia(n2)

    //Processamento
    soma = n1 + n2

    
    //Saída
    escreva("O resultado da soma dos dois é: ", soma)

  }
}
